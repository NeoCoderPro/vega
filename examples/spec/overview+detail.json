{
  "width": 720,
  "height": 480,

  "signals": [
    {
      "name": "brush_start",
      "streams": [{
        "type": "mousedown", 
        "expr": "event.vgX", 
        "scale": {"name": "xContext", "invert": true}
      }]
    },
    {
      "name": "brush_end",
      "init": {"expr": "datetime('Jan 1 2000')"},
      "streams": [{
        "type": "mousedown, mouseup, [mousedown, mouseup] > mousemove",
        "expr": "event.vgX", 
        "scale": {"name": "xContext", "invert": true}
      }]
    },
    {
      "name": "min_date", 
      "init": {"expr": "datetime('Jan 1 2000')"},
      "expr": "min(brush_start, brush_end)"
    },
    {
      "name": "max_date", 
      "init": {"expr": "datetime('Mar 1 2010')"},
      "expr": "max(brush_start, brush_end)"
    }
  ],

  "data": [
    {
      "name": "sp500", 
      "url": "data/sp500.csv",
      "format": {"type": "csv", "parse": {"price": "number", "date": "date"}}
    }
  ],

  "scales": [
    {
      "name": "xContext",
      "type": "time",
      "range": [0, 720],
      "domain": {"data": "sp500", "field": "date"}
    },
    {
      "name": "yContext",
      "type": "linear",
      "range": [70, 0],
      "nice": true,
      "domain": {"data": "sp500", "field": "price"}
    },
    {
      "name": "xFocus",
      "type": "time",
      "range": [0, 720],
      "domainMin": {"signal": "min_date"},
      "domainMax": {"signal": "max_date"}
    },
    {
      "name": "yFocus",
      "type": "linear",
      "range": [390, 0],
      "nice": true,
      "domain": {"data": "sp500", "field": "price"}
    }
  ],

  "marks": [
    {
      "type": "group",
      "properties": {
        "enter": {
          "height": {"value": 390},
          "width": {"value": 720}
        }
      },
      "axes": [
        {"type": "x", "scale": "xFocus"},
        {"type": "y", "scale": "yFocus"}
      ],
      "marks": [
        {
          "type": "group",
          "properties": {
            "enter": {
              "height": {"field": {"group": "height"}},
              "width": {"field": {"group": "width"}},
              "clip": {"value": true}
            }
          },
          "marks": [
            {
              "type": "area",
              "from": {"data": "sp500"},
              "properties": {
                "update": {
                  "x": {"scale": "xFocus", "field": "date"},
                  "y": {"scale": "yFocus", "field": "price"},
                  "y2": {"scale": "yFocus", "value": 0},
                  "fill": {"value": "steelblue"}
                }
              }
            }
          ]
        }
      ]
    },

    {
      "type": "group",
      "properties": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 430},
          "height": {"value": 70},
          "width": {"value": 720}
        }
      },
      "axes": [
        {"type": "x", "scale": "xContext"}
      ],
      "marks": [
        {
          "type": "area",
          "from": {"data": "sp500"},
          "properties": {
            "update": {
              "x": {"scale": "xContext", "field": "date"},
              "y": {"scale": "yContext", "field": "price"},
              "y2": {"scale": "yContext", "value": 0},
              "fill": {"value": "steelblue"}
            }
          }
        },
        {
          "type": "rect",
          "properties":{
            "enter":{
              "y": {"value": 0},
              "height": {"value":70},
              "fill": {"value": "#333"},
              "fillOpacity": {"value":0.2},
              "stroke":{"value":"white"},
              "strokeOpacity":{"value":0.5}
            },
            "update":{
              "x": {"scale": "xContext", "signal": "brush_start"},
              "x2": {"scale": "xContext", "signal": "brush_end"}
            }
          }
        }
      ]
    }

  ]
}