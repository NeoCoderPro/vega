{
  "width": 960,
  "height": 500,
  "data": [
    {
      "name": "unemp",
      "url": "data/unemployment.json"
    },
    {
      "name": "counties",
      "url": "data/us-counties.json",
      "format": {"type": "json", "property": "features"},
      "transform": [
        {"type":"geopath", "field":"data", "projection":"albersUsa"},
        {"type":"zip", "with":"unemp", "as":"value", "keys":["id",0]}
      ]
    }
  ],
  "scales": [
    {
      "name": "color",
      "domain": {"data": "unemp", "field": ["data",1]},
      "range": ["#f5f5f5","#00b"]
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {"data": "counties"},
      "properties": {
        "enter": {
          "stroke": {"value": "#fff"},
          "strokeWidth": {"value": 0.25},
          "path": {"field": "path"}
        },
        "update": {
          "fill": {"scale": "color", "field": ["value","data",1]}
        },
        "hover": {
          "fill": {"value": "red"}
        }
      }
    }
  ]
}