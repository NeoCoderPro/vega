{
  "width": 720,
  "height": 480,
  "padding": 5,

  "signals": [
    { "name": "min", "update": "+datetime('Jan 1 2000')" },
    { "name": "max", "update": "+datetime('Mar 1 2010')" },
    {
      "name": "range", "update": "[0, 0]",
      "on": [
        {
          "events": "@overview:mousedown",
          "update": "[x(), x()]"
        },
        {
          "events": "[@overview:mousedown, window:mouseup] > window:mousemove!",
          "update": "[range[0], clamp(x(), 0, width)]"
        },
        {
          "events": "[@brush:mousedown, window:mouseup] > window:mousemove!",
          "update": "[clamp(range[0] + x() - xmove, 0, width - abs(span(range))), clamp(range[1] + x() - xmove, abs(span(range)), width)]"
        }
      ]
    },
    {
      "name": "xmove", "value": 0,
      "on": [
        {
          "events": "window:mousemove",
          "update": "x()"
        }
      ]
    },
    {
      "name": "brush_start", "update": "min",
      "on": [
        {
          "events": {"signal": "range"},
          "update": "invert('xOverview', range[0])"
        }
      ]
    },
    {
      "name": "brush_end", "update": "min",
      "on": [
        {
          "events": {"signal": "range"},
          "update": "invert('xOverview', range[1])"
        }
      ]
    },
    {
      "name": "min_date",
      "update": "+brush_start === +brush_end ? min : min(brush_start, brush_end)"
    },
    {
      "name": "max_date",
      "update": "+brush_start === +brush_end ? max : max(brush_start, brush_end)"
    }
  ],

  "data": [
    {
      "name": "sp500",
      "url": "data/sp500.csv",
      "format": {"type": "csv", "parse": {"price": "number", "date": "date"}}
    }
  ],

  "scales": [
    {
      "name": "xOverview",
      "type": "time",
      "range": "width",
      "domain": {"data": "sp500", "field": "date"}
    },
    {
      "name": "yOverview",
      "type": "linear",
      "range": [70, 0],
      "domain": {"data": "sp500", "field": "price"},
      "nice": true, "zero": true
    },
    {
      "name": "xDetail",
      "type": "time",
      "range": "width",
      "domain": [{"signal": "min_date"}, {"signal": "max_date"}]
    },
    {
      "name": "yDetail",
      "type": "linear",
      "range": [390, 0],
      "domain": {"data": "sp500", "field": "price"},
      "nice": true, "zero": true
    }
  ],

  "marks": [
    {
      "type": "group",
      "name": "detail",
      "encode": {
        "enter": {
          "height": {"value": 390},
          "width": {"value": 720}
        }
      },
      "axes": [
        {"orient": "bottom", "scale": "xDetail"},
        {"orient": "left", "scale": "yDetail"}
      ],
      "marks": [
        {
          "type": "group",
          "encode": {
            "enter": {
              "height": {"field": {"group": "height"}},
              "width": {"field": {"group": "width"}},
              "clip": {"value": true}
            }
          },
          "marks": [
            {
              "type": "area",
              "from": {"data": "sp500"},
              "encode": {
                "update": {
                  "x": {"scale": "xDetail", "field": "date"},
                  "y": {"scale": "yDetail", "field": "price"},
                  "y2": {"scale": "yDetail", "value": 0},
                  "fill": {"value": "steelblue"}
                }
              }
            }
          ]
        }
      ]
    },

    {
      "type": "group",
      "name": "overview",
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 430},
          "height": {"value": 70},
          "width": {"value": 720},
          "fill": {"value": "transparent"}
        }
      },
      "axes": [
        {"orient": "bottom", "scale": "xOverview"}
      ],
      "marks": [
        {
          "type": "area",
          "interactive": false,
          "from": {"data": "sp500"},
          "encode": {
            "update": {
              "x": {"scale": "xOverview", "field": "date"},
              "y": {"scale": "yOverview", "field": "price"},
              "y2": {"scale": "yOverview", "value": 0},
              "fill": {"value": "steelblue"}
            }
          }
        },
        {
          "type": "rect",
          "name": "brush",
          "encode":{
            "enter":{
              "y": {"value": 0},
              "height": {"value":70},
              "fill": {"value": "#333"},
              "fillOpacity": {"value":0.2}
            },
            "update":{
              "x": {"scale": "xOverview", "signal": "brush_start"},
              "x2": {"scale": "xOverview", "signal": "brush_end"}
            }
          }
        },
        {
          "type": "rect",
          "interactive": false,
          "encode":{
            "enter":{
              "y": {"value": 0},
              "height": {"value":70},
              "width": {"value": 1},
              "fill": {"value": "firebrick"}
            },
            "update":{
              "x": {"scale": "xOverview", "signal": "brush_start"}
            }
          }
        },
        {
          "type": "rect",
          "interactive": false,
          "encode":{
            "enter":{
              "y": {"value": 0},
              "height": {"value":70},
              "width": {"value": 1},
              "fill": {"value": "firebrick"}
            },
            "update":{
              "x": {"scale": "xOverview", "signal": "brush_end"}
            }
          }
        }
      ]
    }
  ]
}
