{
  "name": "vega-typings",
  "version": "0.20.0",
  "description": "Typings for Vega.",
  "types": "types",
  "repository": "vega/vega",
  "author": "Dominik Moritz <domoritz@gmail.com>",
  "keywords": [
    "vega",
    "typescript",
    "typings"
  ],
  "license": "BSD-3-Clause",
  "scripts": {
    "format": "prettier $([ \"$CI\" = true ] && echo --check || echo --write) './**/*.{ts,tsx,js,json,css}'",
    "build-tests": "./build-tests.sh",
    "pretest": "yarn build-tests",
    "test": "yarn format && dtslint .",
    "schema": "ts-json-schema-generator -f tsconfig.json -p types/spec/index.d.ts -t Spec --no-type-check --no-ref-encode > schema.json"
  },
  "dependencies": {
    "vega-util": "^1.15.2"
  },
  "devDependencies": {
    "ts-json-schema-generator": "^0.89.0"
  }
}
