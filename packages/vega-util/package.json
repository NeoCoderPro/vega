{
  "name": "vega-util",
  "version": "1.8.0",
  "description": "JavaScript utilities for Vega.",
  "keywords": [
    "vega",
    "utilities"
  ],
  "license": "BSD-3-Clause",
  "author": "Jeffrey Heer (http://idl.cs.washington.edu)",
  "main": "build/vega-util.js",
  "module": "build/index",
  "types": "build/index.d.ts",
  "repository": "vega/vega",
  "scripts": {
    "rollup": "rollup -f umd -n vega -o build/vega-util.js -- build/index.js",
    "prebuild": "rimraf build && mkdir build && tsc -p .",
    "build": "yarn rollup",
    "postbuild": "terser build/vega-util.js -c -m -o build/vega-util.min.js",
    "pretest": "yarn prebuild && yarn rollup",
    "prettierbase": "prettier 'src/**/*.ts'",
    "format": "npm run prettierbase -- --write",
    "lint": "npm run prettierbase -- --check && eslint test",
    "test": "tape 'test/**/*-test.js' && npm run lint",
    "prepublishOnly": "yarn test && yarn build",
    "postpublish": "git push && git push --tags"
  }
}
